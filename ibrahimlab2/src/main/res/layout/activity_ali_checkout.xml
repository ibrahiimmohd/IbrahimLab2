<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aliActivityCheckout">


    <RadioGroup
        android:id="@+id/ibrahimPaymentRadioGroup"
        android:layout_width="444dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_span="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694">

        <RadioButton
            android:id="@+id/ibrahimCashRadioBtn"
            android:layout_width="72dp"
            android:layout_height="22dp"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="196dp"
            android:freezesText="true"
            android:text="Cash"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"></RadioButton>

        <RadioButton
            android:id="@+id/ibrahimDebitRadioBtn"
            android:layout_width="101dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="196dp"
            android:freezesText="true"
            android:text="Debit Card"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"></RadioButton>

        <RadioButton
            android:id="@+id/ibrahimCreditRadioBtn"
            android:layout_width="98dp"
            android:layout_height="22dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="196dp"
            android:freezesText="true"
            android:text="Credit Card"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ibrahimDebitRadioBtn"></RadioButton>


    </RadioGroup>

    <RadioGroup
        android:id="@+id/ibrahimHomeTypeRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-97dp"></RadioGroup>


    <Button
        android:id="@+id/ibrahimPaymentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibrahimPaymentRadioGroup"
        app:layout_constraintVertical_bias="0.256" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="244dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:textSize="40px"
        android:layout_marginBottom="28dp"
        android:text="Select any payment option"
        app:layout_constraintBottom_toTopOf="@+id/ibrahimPaymentRadioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>