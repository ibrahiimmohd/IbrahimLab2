<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aliActivityCheckout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RadioGroup
            android:id="@+id/ibrahimHomeTypeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="80dp">
        </RadioGroup>

        <TextView
            android:id="@+id/ibrahimSelectPayment"
            style="@style/TxtType1Display"
            android:layout_width="327dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginBottom="28dp"
            android:text="@string/ibrahimTxtSelectPayment" />

        <RadioGroup
            android:id="@+id/ibrahimPaymentRadioGroup"
            android:layout_width="431dp"
            android:layout_height="25dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_span="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ibrahimCashRadioBtn"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_marginStart="64dp"
                android:layout_marginBottom="196dp"
                android:text="@string/ibrahimTxtCashOption"
                android:textSize="40px"></RadioButton>

            <RadioButton
                android:id="@+id/ibrahimDebitRadioBtn"
                android:layout_width="101dp"
                android:layout_height="22dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="196dp"
                android:text="@string/ibrahimTxtDebitOption"
                android:textSize="40px"></RadioButton>

            <RadioButton
                android:id="@+id/ibrahimCreditRadioBtn"
                android:layout_width="98dp"
                android:layout_height="22dp"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="196dp"
                android:text="@string/ibrahimTxtCreditOption"
                android:textSize="40px"></RadioButton>

        </RadioGroup>

        <Button
            android:id="@+id/ibrahimCheckoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/ibrahimTxtCheckout"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibrahimPaymentRadioGroup"
            app:layout_constraintVertical_bias="0.256" />

    </LinearLayout>

</ScrollView>