<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ibrahimImgSemiD1"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/semid1" />

        <TextView
            android:id="@+id/ibrahimTxtSemiD1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtSemiD1" />

        <CheckBox
            android:id="@+id/ibrahimSemiDPChbx1"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimSemiDVChbx1"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <ImageView
            android:id="@+id/ibrahimImgSemiD2"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/semid2" />

        <TextView
            android:id="@+id/ibrahimTxtSemiD2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtSemiD2" />

        <CheckBox
            android:id="@+id/ibrahimSemiDVChbx2"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimSemiDPChbx2"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <ImageView
            android:id="@+id/ibrahimImgSemiD3"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/semid3" />

        <TextView
            android:id="@+id/ibrahimTxtSemiD3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtSemiD3" />

        <CheckBox
            android:id="@+id/ibrahimSemiDPChbx3"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimSemiDVChbx3"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <ImageView
            android:id="@+id/ibrahimImgSemiD4"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/semid4" />

        <TextView
            android:id="@+id/ibrahimTxtSemiD4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtSemiD4" />

        <CheckBox
            android:id="@+id/ibrahimSemiDVChbx4"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimSemiDPChbx4"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <Button
            android:id="@+id/ibrahimSemiDAddBtn"
            android:layout_width="228dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:text="@string/ibrahimTxtInterestBtn" />

        <Button
            android:id="@+id/ibrahimSemiDNextBtn"
            android:layout_width="228dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"
            android:text="@string/ibrahimTxtNextBtn" />
    </LinearLayout>
</ScrollView>
