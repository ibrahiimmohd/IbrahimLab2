<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ibrahimImgTown1"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/townh1" />

        <TextView
            android:id="@+id/ibrahimTxtTown1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtTownH1" />

        <CheckBox
            android:id="@+id/ibrahimTownPChbx1"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimTownVChbx1"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <ImageView
            android:id="@+id/ibrahimImgTown2"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/townh2" />

        <TextView
            android:id="@+id/ibrahimTxtTown2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtTownH2" />

        <CheckBox
            android:id="@+id/ibrahimTownVChbx2"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimTownPChbx2"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <ImageView
            android:id="@+id/ibrahimImgTown3"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/townh3" />

        <TextView
            android:id="@+id/ibrahimTxtTown3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtTownH3" />

        <CheckBox
            android:id="@+id/ibrahimTownPChbx3"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimTownVChbx3"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <ImageView
            android:id="@+id/ibrahimImgTown4"
            android:layout_width="272dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/townh4" />

        <TextView
            android:id="@+id/ibrahimTxtTown4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TxtType1Display"
            android:text="@string/ibrahimTxtTownH4" />

        <CheckBox
            android:id="@+id/ibrahimTownVChbx4"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimVirtualChx" />

        <CheckBox
            android:id="@+id/ibrahimTownPChbx4"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="@string/ibrahimPhysicalChx" />

        <Button
            android:id="@+id/ibrahimTownAddBtn"
            android:layout_width="228dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="onClick"
            android:text="@string/ibrahimTxtInterestBtn" />

        <Button
            android:id="@+id/ibrahimTownNextBtn"
            android:layout_width="228dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"
            android:text="@string/ibrahimTxtNextBtn" />
    </LinearLayout>
</ScrollView>
